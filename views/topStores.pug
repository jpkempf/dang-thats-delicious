extends layout
include mixins/_storeCard

block content
    .inner
        h2 Top #{stores.length} Best Rated Stores

        table.table
            thead
                td Photo
                td Rank
                td Name
                td # of Reviews
                td Average Rating

            each store, i in stores
                tr
                    td
                        img(
                            width=200
                            src=`/uploads/${store.photo || 'store.png'}`
                            alt=store.name
                        )
                    td= i + 1
                    td
                        a(href=`/stores/${store.slug}`)= store.name
                    td= store.reviews.length
                    td #{Math.round(store.averageRating * 10) / 10} of 5